
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <title>homepage</title>
</head>
<body>
    <div class="navbar">
        <img src="~/images/256_256.png" alt="">
        <a href="~/index/homepage"><i class="fa fa-fw fa-home"></i> Home</a>
        <a href="~/price/price"> <i class="fa fa-lira-sign"></i> Pricing</a>
        <a href="~/whyus/whyus"><i class="fa fa-question"></i>  Why Us</a>
        <a href="~/index/contact"><i class="fa fa-paper-plane"></i>  Contact Us</a>
    </div>
    <div class="navbaric">
        @if (User.IsInRole("u"))
        {
            <a href="~/sign/signout" style="float:right">Sign out</a>
            <a href="~/sign/upload/" style="float:right">Upload</a>

        }
        else if (User.IsInRole("p"))
        {
            <a href="~/sign/signout" style="float:right">Sign out</a>
            <a href="~/sign/upload/" style="float:right"><i class="fa fa-star"></i>Premium Upload </a>
        }
        else if (User.IsInRole("a"))
        {
            <a href="~/admin/admin" style="float:right"><i class="fa fa-fw fa-home"></i>Admin Page</a>
        }
        else
        {
            <a href="~/sign/signin" style="float:right"><i class="fa fa-fw fa-user"></i> Sign in</a>
            <a href="~/sign/signup" style="float:right"><i class="fa fa-fw fa-user"></i> Sign up</a>
        }
        <a href="~/index/download" style="float:right"><i class="fa fa-download"></i> Download</a>
    </div>


    <div class="left">
        <div class="ortala">
            <div class="siteadı">
                <h1>MyDrive</h1>
            </div>
            <div class="siteadıaltı">
                <p>Dosyalarınızı ve fotoğraflarınızı MyDrive’a kaydederek bunlara istediğiniz her cihazdan ve her yerden erişin.</p>
            </div>
            <div class="buton">
                <a href="~/sign/signin">Oturum açın</a>
                <a href="~/price/price">Planlara Göz Atın</a>
            </div>
        </div>
    </div>


    <div class="right">
        <div class="card">
            <div class="container">
                <img src="~/images/256_256.png" style="width: 150px; height: 150px; margin-left: 20%; margin-bottom: 20px;" alt="">
                <br>
                <h2 style="margin-left: 20%;"><b>Sign up free</b></h2>
                <br>
                <p style="margin-left: 10%;">Get 5 GB free, upgrade any time.</p>
                <br>
                <hr>

                <div class="buton">
                    <a href="~/sign/signup" style="background-color: #00a195 !important; color: white!important;">Sign up free</a>
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div><h4>MyDrive</h4></div>
        <div><h4><a href="~/index/kk">Kullanım Koşulları</a></h4></div>
        <div><h4>MyDrive © 2020</h4></div>
        <div><h4><i class="fa fa-globe-americas"></i>Türkçe</h4></div>
    </div>
</body>
</html>
